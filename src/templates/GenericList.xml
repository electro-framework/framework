<?xml version="1.0" encoding="UTF-8"?>
<c:template name="generic-list">
    <p:param name="on-click"      type="text" default="{!URI.mainForm}"/>
    <p:param name="title-label"   type="text" default="{!labels.title}"/>
    <p:param name="title-content" type="text" default="{title}"/>
    <p:body>
      <fieldset class="mainPanel">
        <div class="fieldset">
          <c:data-grid data="{!default}">
            <p:column width="40"   type="row-selector" />
            <p:column width="100%" title="{@title-label}"   />
            <p:row-template on-click="{@on-click}">
              <p:column>{#ord}</p:column>
              <p:column>{@title-content}</p:column>
            </p:row-template>
            <p:no-data>
              {!admin.noItems}
            </p:no-data>
          </c:data-grid>
          <t:button-new url="{@on-click}"/>
        </div>
      </fieldset>
    </p:body>
</c:template>
