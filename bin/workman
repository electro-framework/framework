#!/usr/bin/env php
<?php
use App\Init;
use Electro\Core\ConsoleApplication\ConsoleApplication;
use Electro\Core\DependencyInjection\Injector;
use Electro\Core\Profiles\ConsoleProfile;

// Start the class autoloader.

require "{$_SERVER['PWD']}/private/packages/autoload.php";

// Setup the app.
Init::init ();

/*
 * Run the framework's Console subsystem, which then runs the terminal-based application.
 * You can customize the Dependency Injector the framework uses by changing the fist argument of
 * the factory method invocation below.
 */
$consoleApp = ConsoleApplication::make (new Injector, ConsoleProfile::class);
$consoleApp->setupStandardIO ($_SERVER['argv']);
$consoleApp->execute ();
